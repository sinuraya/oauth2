{
    "name": "oauth2",
    "description": "OAuth 2.0 using slim framework",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://accounts.kepasar.co.id",
    "license": "MIT",
    "authors": [
        {
            "name": "Heston Sinuraya",
            "email": "sinuraya@gmail.com",
            "homepage": "https://www.linkedin.com/in/heston-sinuraya/"
        },
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        },
        {
            "name": "Pierre Berube",
            "email": "pierre@lgse.com",
            "homepage": "http://www.lgse.com/"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "doctrine/orm": "^2.7",
        "league/fractal": "^0.19.2",
        "league/oauth2-server": "^8.0",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "vlucas/phpdotenv": "^5.0",
        "yiisoft/yii2": "2.0.38"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
	"replace": {
		"bower-asset/jquery": "*",
		"bower-asset/jquery.inputmask": "*",
		"bower-asset/inputmask": "*",
		"bower-asset/punycode": "*",
		"bower-asset/yii2-pjax": "*"
	},
	"conflict": {
		"bower-asset/jquery": "*",
		"bower-asset/jquery.inputmask": "*",
		"bower-asset/inputmask": "*",
		"bower-asset/punycode": "*",
		"bower-asset/yii2-pjax": "*"
    },    
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Doctrine\\DBAL\\Logging\\": "app/Doctrine/DBAL/Logging/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
